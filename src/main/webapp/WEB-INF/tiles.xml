<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- main layout -->
	<definition name="tiles-layout" template="/WEB-INF/views/tiles-layout.jsp">
		<put-attribute name="index" value="index"/>
		<put-attribute name="about" value="about"/>
		<put-attribute name="blog" value="blog"/>
		<put-attribute name="shop" value="shop"/>
		<put-attribute name="contact" value="contact"/>
		
		<put-attribute name="header" value="/WEB-INF/views/templates/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp" />
	</definition>
	
	<definition name="*.tiles" extends="tiles-layout">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>
</tiles-definitions>